<UserControl x:Class="KeyStroker.UI.UserControls.Tabs.KeySpammer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KeyStroker.UI.UserControls.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             
             TextElement.FontWeight="Medium"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal" 
             TextOptions.TextRenderingMode="Auto"     
             Foreground="Black"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="83*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="125"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <!-- Button grid -->
        <DataGrid Margin="10,10,10,10" Grid.RowSpan="5" ItemsSource="{Binding Buttons, NotifyOnSourceUpdated=True}" SelectedItem="{Binding SelectedButton}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Key" Binding="{Binding KeyCode}" Width="1*"></DataGridTextColumn>
                <DataGridTextColumn Header="Interval" Binding="{Binding Interval}" Width="1*"></DataGridTextColumn>
                <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding Enabled}" Width="1*"></DataGridCheckBoxColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Button to spam, in human readable form -->
        <TextBox Text="{Binding EditableButton.KeyCode}" md:HintAssist.Hint="Key" md:HintAssist.IsFloating="True" md:HintAssist.HelperText="Key to spam" TextWrapping="Wrap"
                 Margin="10,0,10,10" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" />
        
        <!-- Interval slider & label -->
        <Slider x:Name="msSLider" Value="{Binding EditableButton.Interval}"  TickFrequency="{Binding TickFreq}" Minimum="{Binding Min}" Maximum="{Binding Max}" 
                Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2"/>

        <Label Content="{Binding ms}"
               Margin="10,0,10,0" VerticalAlignment="Center" Height="24" Grid.Row="2"  Grid.Column="3"/>

        <!-- Is the button spammer enabled for this button -->
        <CheckBox x:Name="EnabledTick" IsChecked="{Binding EditableButton.IsEnabled}" Content="Enabled"
                  Margin="10,10,10,0"  Grid.Column="3"  Grid.Row="4" Height="31" VerticalAlignment="Top"/>

        <TextBox Text="{Binding RepeatAmount}" md:HintAssist.Hint="Repeat amount" md:HintAssist.IsFloating="True" md:HintAssist.HelperText="The amount of times to repeat the action" TextWrapping="Wrap"
                 IsEnabled="{Binding ElementName=EnabledTick, Path=IsChecked}" Grid.Column="1" Grid.Row="3" VerticalAlignment="Top" Margin="10,0,10,0" Grid.ColumnSpan="2" Height="40"/>

        <Button Content="Set" Command="{Binding SetKey}"
                Margin="10" Grid.Column="3"  Grid.Row="1" VerticalAlignment="Center"/>

        <CheckBox Content="Infinitely" IsChecked="{Binding EditableButton.InfinityTimes}"
                  Margin="10"  Grid.Column="3" Grid.Row="3"/>

    </Grid>
</UserControl>
